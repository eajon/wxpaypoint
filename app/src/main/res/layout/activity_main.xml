<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/back_iv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@mipmap/main_background"
        android:scaleType="fitXY" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="35dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/notice_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="175dp"
            android:layout_toLeftOf="@+id/button"
            android:layout_weight="1"
            android:scaleType="center"
            android:src="@mipmap/notice" />

        <ImageView
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="150dp"
            android:layout_weight="1"
            android:scaleType="center"
            android:src="@mipmap/button" />

        <ImageView
            android:id="@+id/qrcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="150dp"
            android:layout_weight="1"
            android:scaleType="center"
            android:src="@mipmap/qrcode" />

        <ImageView
            android:id="@+id/product_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="175dp"
            android:layout_toRightOf="@+id/button"
            android:layout_weight="1"
            android:scaleType="center"
            android:src="@mipmap/product" />
    </LinearLayout>

    <TextView
        android:id="@+id/machine_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="35dp"
        android:layout_marginRight="10dp"
        android:textColor="#999999"
        android:textSize="10dp" />

    <TextView
        android:id="@+id/quit_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true" />
</RelativeLayout>