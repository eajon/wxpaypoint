<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:background="@drawable/grey_shape">

        <ImageView
            android:id="@+id/product_iv"
            android:layout_width="142dp"
            android:layout_height="60dp"
            android:layout_margin="10dp"
            android:scaleType="fitXY"/>

        <TextView
            android:id="@+id/product_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textColor="#333333"
            android:textSize="10dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_below="@+id/product_iv"/>

        <TextView
            android:id="@+id/price_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textColor="#f63a00"
            android:textSize="12dp"
            android:layout_below="@+id/product_tv"/>
        <ImageView
            android:layout_width="15dp"
            android:layout_height="12dp"
            android:id="@+id/fu_logo_iv"
            android:src="@mipmap/fu_logo"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:paddingRight="3dp"/>
        <ImageView
            android:layout_width="15dp"
            android:layout_height="12dp"
            android:id="@+id/hui_logo_iv"
            android:src="@mipmap/hui_logo"
            android:layout_below="@+id/fu_logo_iv"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:paddingRight="3dp"/>
    </RelativeLayout>
</LinearLayout>